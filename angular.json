{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "shared-components": {
      "projectType": "library",
      "root": "projects/shared-components",
      "sourceRoot": "projects/shared-components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/shared-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/shared-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/shared-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/shared-components/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "shared-components:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/shared-components"
            ],
            "port": 6006,
            "tsConfig": "./.storybook/tsconfig.json",
            "styles": [
              "projects/shared-components/src/lib/styles/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules",
                "projects/shared-components/src"
              ]
            }
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "shared-components:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/shared-components"
            ],
            "outputDir": "storybook-static",
            "styles": [
              "projects/shared-components/src/lib/styles/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules",
                "projects/shared-components/src"
              ]
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}